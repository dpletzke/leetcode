{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "func-names":"off",
      "max-len":["error", { "code": 80 }],
      "arrow-parens": "off",
      "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }]
    }
}
